@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>
    <div class="cart-container">
        <div class="cart-left">
            <!-- Left list with product details -->
            <ul class="product-list">
                <!-- foreach item in logged in accounts shopping cart -->
                <li class="product">
                    <img src="product1.jpg" alt="Product 1" />
                    <div class="product-info">
                        <h3>Product 1</h3>
                        <p>Description of Product 1</p>
                        <p>Price: $10.99</p>
                        <p>Quantity: 2</p>
                    </div>
                </li>
                <li class="product">
                    <img src="product2.jpg" alt="Product 2" />
                    <div class="product-info">
                        <h3>Product 2</h3>
                        <p>Description of Product 2</p>
                        <p>Price: $11.99</p>
                        <p>Quantity: 2</p>
                    </div>
                </li>
                <li class="product">
                    <img src="product3.jpg" alt="Product 3" />
                    <div class="product-info">
                        <h3>Product 3</h3>
                        <p>Description of Product 3</p>
                        <p>Price: $12.99</p>
                        <p>Quantity: 2</p>
                    </div>
                </li>
            </ul>
        </div>
        <div class="cart-right">
            <!-- Right list with product names, quantities, and prices -->
            <ul class="product-summary">
                <li class="product">
                    <h3>Product 1</h3>
                    <p>Quantity: 2</p>
                    <p>Price: $10.99</p>
                </li>
            </ul>
        </div>
    </div>
</body>